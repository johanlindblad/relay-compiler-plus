{
  "name": "rcp-schema-stitching",
  "version": "1.0.0",
  "description": "A relay app to demo schema stitching",
  "main": "index.js",
  "scripts": {
    "get-remote-schema": "graphql get-schema",
    "rcp": "npm run get-remote-schema && NODE_ENV=production relay-compiler-plus --webpackConfig src/server/webpack.config.js --src src",
    "start": "npm run rcp && nodemon --ext js,json,graphql --exec babel-node src/server",
    "clean-relay": "find . \\( -name \"*.graphql.js\" -o -name \"*.queryMap.json\" \\) -type f -delete && rm -rf ./src/queryMap.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yusinto/create-relay-modern-app.git"
  },
  "keywords": [
    "relay",
    "modern",
    "schema",
    "stitching",
    "react",
    "graphql",
    "apollo"
  ],
  "author": "Yus Ng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yusinto/relay-compiler-plus/issues"
  },
  "homepage": "https://github.com/yusinto/relay-compiler-plus#readme",
  "dependencies": {
    "apollo-fetch": "^0.7.0",
    "apollo-link-context": "^1.0.8",
    "apollo-link-http": "^1.5.4",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "express": "^4.16.2",
    "express-graphql": "^0.6.12",
    "global": "^4.3.2",
    "graphql": "^0.13.1",
    "graphql-cli": "^2.15.12",
    "graphql-import": "^0.5.2",
    "graphql-tools": "^3.0.0",
    "graphql-yoga": "^1.12.1",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.22.1",
    "node-fetch": "^2.1.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-relay": "^1.6.0",
    "relay-compiler-plus": "^1.7.9",
    "relay-runtime": "^1.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-relay": "^1.6.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "nodemon": "^1.17.3",
    "webpack": "^4.6.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.1",
    "webpack-node-externals": "^1.6.0"
  }
}
